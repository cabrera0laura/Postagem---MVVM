<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Postagem.View.PostView"
             Title="PostView">
    <VerticalStackLayout>
        <Label 
                Text="{Binding Titulo}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        <Entry
                Text="{Binding Corpo}"
                Placeholder="Titulo"
                HeightRequest="90"
                />
        <Button
                Text="Enviar"
                Command="{Binding DisplayPostsCommand}"/>   
    </VerticalStackLayout>
</ContentPage>